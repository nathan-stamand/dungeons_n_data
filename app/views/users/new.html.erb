<h1>Sign Up Here for a DND Account!</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this User from being created:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  <p>

  <p><%= f.submit "Sign Up", {class: "btn btn-default btn-primary"} %></p>
<% end %>

<div class="return-to-homepage container mt-3">
  <%= link_to("Return to Homepage", "/", {class: "text-muted block"}) %>
</div>