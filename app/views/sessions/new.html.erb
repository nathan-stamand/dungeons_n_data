<h1>New Session for <%= @campaign.title %></h1>

<%= form_with model: @session, local: true do |f| %>
    <%= label_tag :session_date %>
    <input type="date" id="session_date" name="session[date]"><br><br>

    <%= label_tag :session_start_time %>
    <input type="time" id="session_start_time" name="session[start_time]"><br><br>

    <%= label_tag :session_end_time %>
    <input type="time" id="session_end_time" name="session[end_time]"><br><br>

    <%= f.label :place %>
    <%= f.text_field :place %><br><br>

    <%= f.submit %>
    
<% end %>