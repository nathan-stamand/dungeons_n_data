<h1><%= @creator.username if @creator%> Characters</h1>

<% if check %>
  <%= link_to "Add Character", new_user_character_path(@creator)%><br>
<% end %>

<% if @characters %>
  <% @characters.each do |char| %>
  <li>
  <%= link_to char.name, user_character_path(char.player, char) %>
  </li>
  <% end %>
<% end %>

<br>
<% if !check && @creator %>
  <%= link_to "#{@creator.username}'s Homepage", user_path(@creator) %>
<% end %>
