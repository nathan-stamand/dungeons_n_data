<h1><%= @campaign.title %></h1>

<p>Date: <%= @dnd_session.date.to_time.strftime("%B %d, %Y") %></p>

<p>Start: <%= @dnd_session.start_time.to_time.strftime("%I:%M %p") %></p>

<p>End: <%= @dnd_session.end_time.to_time.strftime("%I:%M %p") %></p>

<p>Hours: <%= @dnd_session.hours %></p>

<p>Place: <%= @dnd_session.place %></p>

<% if check %>
  <p>Notes: <%= @dnd_session.dm_notes %></p><br>

  <%= button_to 'Edit', edit_dnd_session_path(id: @dnd_session, campaign_id: @campaign.id), method: :get %><br>

  <%= button_to 'Delete', dnd_session_path(@dnd_session), method: :delete, data: {confirm: "Are you sure??"} %>
<% end %>
<br><br>

<%= link_to "#{@campaign.title}'s sessions", campaign_dnd_sessions_path(@campaign) %><br><br>

<%= link_to "#{@campaign.title} page", user_campaign_path(@creator, @campaign) %>