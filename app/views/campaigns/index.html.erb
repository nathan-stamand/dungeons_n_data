<h1><%= @creator.username %>'s Campaigns</h1>

<% if check %>
  <%= button_to "Create New Campaign", new_user_campaign_path(@user), {method: :get} %><br>
<% end %>

<h3>Created Campaigns</h3>
<ul>
  <% @created_campaigns.each do |campaign| %>
    <li>
    <%= link_to campaign.title, user_campaign_path(@creator, campaign) %>
    </li>
  <% end %>
</ul><br>

<h3>Play Campaigns</h1>
<ul>
  <% @play_campaigns.each do |campaign| %>
    <li>
    <%= link_to campaign.title, user_campaign_path(campaign.dungeon_master, campaign) %>
    </li>
  <% end %>
</ul>

<% if !check %>
  <%= link_to "#{@creator.username}'s Homepage", user_path(@creator) %>
<% end %>
