<h1><%= @campaign.title %></h1>

<p>by: <%= link_to @dungeon_master.username, user_path(@dungeon_master) %></p>

<h3>Players</h3>
<ul>
<% @campaign.players.each do |player| %>
    <li>
        <%= link_to player.username, user_path(player) %>
    </li>
<% end %>
</ul><br><br>

<h3>Recent Sessions</h3>
<ul>
<% @recent_sessions.each do |session| %>
    <li>
        <%= link_to "#{session.date} at #{session.place}", campaign_session_path(@campaign, session) %>
    </li>
<% end %>
<br>
<%= link_to "See All Sessions for #{@campaign.title}", campaign_sessions_path(@campaign) %>