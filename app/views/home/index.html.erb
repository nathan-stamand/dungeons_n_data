<div class="container my-3">
  <%= link_to(new_user_path, {class: "btn btn-secondary btn-block"}) do %>
    <span>Sign Up <i class="fas fa-user-plus"></i></span>
  <% end %><br>
  <%= link_to(users_login_path, {class: "btn btn-primary btn-block my-1"}) do %>
    <span>Log In <i class="fas fa-sign-in-alt"></i></span>
  <% end %><br>
  <%= link_to("/auth/google_oauth2", {class: "btn btn-outline-dark btn-default mt-2 google-sign-in"}) do %>
    <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
    <span>Sign In with Google</span> 
  <% end %>
</div>

<div class="bg-white my-3 d-block d-md-none">
  <h3>Welcome to Dungeons'n'Data!</h3>
  <p>
    Dungeon Masters and players unite to organize their campaigns and characters!
  </p>
</div>